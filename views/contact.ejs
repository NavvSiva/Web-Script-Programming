<section id="ContactMe" class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card p-4 shadow-lg" style="background-color: black; border-radius: 15px;">
                <h2 class="text-center" style="color: goldenrod; font-weight: bold;">Contact Me</h2>
                <form action="mailto:abhinav.sivasakthi@ontariotechu.net" method="post" enctype="text/plain" class="mt-4">
                    
                    <div class="form-group">
                        <label for="name" style="color: lightgray;">Name:</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" required>
                    </div>
                    <div class="form-group">
                        <label for="email" style="color: lightgray;">Email:</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email Address" required>
                    </div>
                    <div class="form-group">
                        <label for="questions" style="color: lightgray;">Questions:</label>
                        <textarea id="questions" name="questions" class="form-control" rows="5" placeholder="Enter Your Query"></textarea>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary" style="background-color: #daa520; border-color: #daa520;">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
